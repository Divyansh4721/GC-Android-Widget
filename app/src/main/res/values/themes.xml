<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Rateswidget" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/gold_primary</item>
        <item name="colorPrimaryVariant">@color/gold_dark</item>
        <item name="colorOnPrimary">@android:color/black</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/silver_secondary</item>
        <item name="colorSecondaryVariant">@color/silver_dark</item>
        <item name="colorOnSecondary">@android:color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/light_background</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/dark_text</item>
        <item name="colorOnBackground">@color/medium_text</item>
        <item name="card_Surface">@color/white</item>
        <item name="ndc">@color/white</item>
        <item name="tc">@color/black</item>
        <item name="toolbar_title_color">@color/white</item>
        
        

        <!-- Add these M3 attributes -->
        <item name="colorSurfaceVariant">@color/surface_variant_color</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_color</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Application theme (keep only this one) -->
    <style name="Theme.Rateswidget" parent="Base.Theme.Rateswidget" />

    <!-- The rest of your styles can remain unchanged -->
    <style name="SplashTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style>
        <item name="logout">@color/log_out</item>
        <item name="forgold">@color/for_gold</item>
        <item name="forsilver">@color/for_silver</item>
        <item name="widgetbg">@color/widget_bg</item>
    </style>
    
    <!-- Other styles... -->
</resources>